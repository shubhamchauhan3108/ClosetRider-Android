<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/light_purple"
                    android:textSize="42sp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/michlandscript"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Closet"
                    />

                <ImageView
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/spark_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <TextView
                android:layout_marginTop="@dimen/margin_30"
                android:text="Sign up"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_25"
                android:fontFamily="@font/robotobold"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"
                android:text="Fill Yours Personal Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/register_name"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/padding_10"
                android:textSize="15sp"
                android:hint="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/register_mobile"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/text_size_15"
                android:hint="Mobile"
                android:inputType="phone"
                android:maxLength="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/register_email"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/padding_10"
                android:hint="Email"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/register_gender"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/padding_10"
                android:hint="Gender"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:textSize="@dimen/text_size_14"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"

                android:text="Pickup and Delivery Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/register_address"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/padding_10"
                android:hint="Address"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/register_landmark"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/padding_10"
                android:textSize="15sp"
                android:hint="Nearest Landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/register_state_name"
                android:background="@drawable/edit_text_bg"
                android:hint="Select State"
                android:drawableRight="@drawable/blue_drop_down"
                android:paddingHorizontal="@dimen/padding_10"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:paddingVertical="@dimen/padding_10"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/register_city_name"
                android:background="@drawable/edit_text_bg"
                android:hint="Select City"
                android:drawableRight="@drawable/blue_drop_down"
                android:paddingHorizontal="@dimen/padding_10"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:paddingVertical="@dimen/padding_10"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/register_pincode"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/edit_text_bg"
                android:padding="@dimen/padding_10"
                android:hint="Pincode"
                android:maxLength="6"
                android:inputType="number"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/register_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_gravity="center"
                android:background="@drawable/purple_btn"
                android:layout_marginTop="@dimen/margin_25"
                android:padding="@dimen/margin_10"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/verify_otp_resend_layout"
                android:visibility="visible"
                android:layout_marginTop="@dimen/text_size_20"
                android:layout_marginBottom="@dimen/margin_20"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:textColor="#7C7D7E"
                    android:text="Already have account?  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/resend_otp"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textColor="@color/light_yellow"
                    android:text="Login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>