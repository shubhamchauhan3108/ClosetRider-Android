<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/top_right_left_radius"
    android:padding="@dimen/padding_10"
    android:elevation="@dimen/margin_5"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:layout_marginTop="@dimen/margin_10"
        android:layout_gravity="center"
        android:background="@color/light_purple"
        android:layout_width="100dp"
        android:layout_height="3dp"/>

    <TextView
        android:fontFamily="@font/robotobold"
        android:textColor="@color/light_purple"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Pickup Notification"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout

        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/edit_text_bg"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_10"
            android:textColor="@color/light_purple"
            android:text="Your Earn"
            android:textSize="@dimen/text_size_18"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_10"
            android:textColor="@color/light_purple"
            android:text="â‚¹ 150"
            android:textSize="@dimen/text_size_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/white_bg"
        android:backgroundTint="#F6F6F6"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_weight="1"
                android:text="Order #20156"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/light_purple"
                android:textSize="@dimen/text_size_15" />



            <TextView
                android:layout_marginEnd="@dimen/margin_20"
                android:id="@+id/custom_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs40000"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 12.00 pm | 12 Oct 2022"
            android:textColor="@color/black"
            android:fontFamily="@font/robotoregular"
            android:textSize="10sp"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginStart="@dimen/margin_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/custom_item_total_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>


        <!--        <LinearLayout-->
        <!--            android:layout_marginStart="@dimen/margin_5"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:orientation="horizontal">-->

        <!--            <TextView-->
        <!--                android:visibility="gone"-->
        <!--                android:id="@+id/custom_item_packaged_status"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_marginStart="@dimen/margin_5"-->
        <!--                android:textColor="#666666"-->
        <!--                android:text="Packaged Delivered on"-->
        <!--                android:textSize="@dimen/text_size_15" />-->

        <!--          -->
        <!--        </LinearLayout>-->

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="5sp"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/prod_thumbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                tools:listitem="@layout/order_list_img"
                tools:itemCount="1"/>

        </LinearLayout>

        <TextView
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Location"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/pickup_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="18, Vaishali Enclave, Pitampura, Kohat Enclave New Delhi- 110034"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="View Details"
            android:focusable="true"
            android:clickable="true"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="@font/robotobold"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:background="@drawable/purple_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>



</LinearLayout>