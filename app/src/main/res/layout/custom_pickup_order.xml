<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:background="@drawable/white_bg"
        android:backgroundTint="#F6F6F6"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/custom_pickup_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order #20156"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/light_purple"
                android:textSize="@dimen/text_size_15" />


            <TextView
                android:id="@+id/custom_pickup_order_price"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 1500"
                android:gravity="right"
                android:layout_gravity="right"
                android:textColor="@color/light_purple"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold" />




        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/time_tv"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time: 12.00 pm | 12 Oct 2022"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoregular"
                android:textSize="10sp"
                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/robotoregular"
                android:gravity="right"
                android:text="Your Earn"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>


        <View
            android:layout_marginTop="@dimen/margin_10"
            android:background="#E7E7E7"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">




            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/robotobold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Pickup Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/custom_pickup_order_date"
                    android:text="7 OCT 2023"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/robotobold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Pickup Time Slot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/custom_pickup_order_time"
                    android:text="8 to 10 am"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/margin_10"
            android:background="#E7E7E7"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <TextView
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Location"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/pickup_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/custom_pickup_order_address"
                android:text="18, Vaishali Enclave, Pitampura, Kohat Enclave New Delhi- 110034"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/pickup_details_view_details"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="View Details"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginBottom="2dp"
                app:cornerRadius="@dimen/margin_10"
                android:layout_gravity="center"
                app:strokeColor="@color/black"
                app:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/custom_pickup_order_submit"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Submit"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="center"
                app:strokeColor="@color/black"
                android:background="@drawable/purple_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>